<div>
    <h2><%= movieDetails.Title %> (<%= movieDetails.Year %>)</h2>
    <img src="<%= movieDetails.Poster  %> " alt="Movie Poster" />
</div>
<div id="details">
    <span>Rating:</span>
    <%= movieDetails.Rated %>
    <hr />
    <span>Genre:</span> <%= movieDetails.Genre %>
    <hr />
    <span>Directed by:</span> <%= movieDetails.Director %>
    <hr />
    <span>Starring:</span> <%= movieDetails.Actors %>
    <hr />
    <span>Awards:</span> <%=
    movieDetails.Awards %>
    <hr />
    <span>Plot:</span> <%= movieDetails.Plot %>
</div>